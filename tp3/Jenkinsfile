pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello depuis un pipeline déclaratif'
            }
        }

        stage('Infos environnement') {
            steps {
                echo "Nom du noeud Jenkins: ${env.NODE_NAME}"
                echo "Workspace: ${env.WORKSPACE}"
            }
        }

        stage('Installation') {
            steps {
                echo 'Installation des dépendances avec Poetry'
                dir('tp2') {
                    bat 'poetry install'
                }
            }
        }

        stage('Tests Unitaires') {
            steps {
                echo 'Lancement des tests unitaires'
                dir('tp2') {
                    bat 'poetry run pytest tests/unit/ -v'
                }
            }
        }

        stage('Couverture de code') {
            steps {
                echo 'Génération du rapport de couverture'
                dir('tp2') {
                    bat 'poetry run pytest tests/unit/ --cov=src --cov-report=html --cov-report=term'
                }
            }
        }
    }
}
